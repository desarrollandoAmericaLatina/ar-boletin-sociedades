#! /usr/bin/env ruby

# encoding: UTF-8

trap(:INT) { exit 1 }

require_relative "../lib/parser"

all = []

current = nil

buffer = []

MARKER = "SOCIEDAD ANONIMA"

ARGF.lines do |line|
  line = line.strip
  next if line.empty?

  if line == MARKER
    buffer.clear if all.empty?

    if current
      current.text = buffer.slice!(0..-2).join(" ")
      puts
      puts "#{current.razon_social}: #{current.personas.join(" | ")}"
      all << current
    end

    current = Sociedad.new
    current.razon_social = buffer.delete_at(0)

    buffer.size == 0 || (raise "Expected buffer to be empty at this point.")
  else
    buffer << line
  end
end
